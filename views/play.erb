<h1><%=$game.player_1.name %> & <%=$game.player_2.name%></h1>
<h2><%=$game.player_1.name %> HP: <%=$game.player_1.hp%> // <%=$game.player_2.name%> HP: <%=$game.player_2.hp%></h2>

<%if $game.player_1_turn %>
  <form action="/player_1_attack">
    <input type="submit" value="Player 1 Attack">
  </form>
<% else %>
  <form action="/player_2_attack">
    <input type="submit" value="Player 2 Attack">
  </form>
<% end %>
